{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "target": "es6",
        "lib": ["es6"],
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "."
    },
    "include": ["src/**/*", "tests/**/*"]
}
